<h1>Listing posts</h1>
 
<table id="posts">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
  	<th></th>
  	<th></th>
  	<th></th>
    </tr>
  </thead>
 
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
  	  <td><%= link_to "Show", :controller => "posts", :action => :show, :id => post.id %></td>
  	  <td><%= link_to "Edit", :controller => "posts", :action => :edit, :id => post.id %></td>
  	  <td><%= link_to "Destroy", {:controller => "posts", :action => :destroy, :id => post.id}, :method => :delete, :confirm => 'Are you sure ?' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New post", :controller => "posts", :action => "new" %>

<%= render 'user_details' %>