<div id="admin_nav">
  <% if admin_signed_in? %>
    Signed in as <%= current_admin.email %>. Not you?
    <%= link_to "Sign out", destroy_admin_session_path, :method => :delete %>
  <% else %>
    <%= link_to "Sign up", new_admin_registration_path %> or <%= link_to "sign in", new_user_session_path %>
  <% end %>
</div>

<h1><%= t "posts.headline", default: "Listing posts" %></h1>

<div id="acceuil">
	<%= t('.hello', :default => 'Hello guest') %>
	
	<%= current_admin %>
</div>


<%= link_to "New post", :controller => "posts", :action => "new" %>

<table id="posts" class="display">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Show Post's Detail</th>
      <th>Edit Post</th>
      <th>Delete Post</th>
    </tr>
  </thead>
 
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
  	  <td><%= link_to "Show", :controller => "posts", :action => :show, :id => post.id %></td>
  	  <td><%= link_to "Edit", :controller => "posts", :action => :edit, :id => post.id %></td>
  	  <td><%= link_to "Destroy", {:controller => "posts", :action => :destroy, :id => post.id}, :method => :delete, :confirm => 'Are you sure ?' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'user_details' %>